<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/standard_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/standard_padding"
        android:background="@drawable/garden_action_sheet_background"
        android:orientation="vertical">
        <com.google.android.flexbox.FlexboxLayout
            app:justifyContent="space_between"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="@integer/font_semi_bold"
                android:fontFamily="@font/madani"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:text="@string/select_background_music"
                />
            <TextView
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/destructive"
                android:fontFamily="@font/madani"
                android:text="@string/close"/>
        </com.google.android.flexbox.FlexboxLayout>

        <ScrollView
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/music_list_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>
    </LinearLayout>

</LinearLayout>